<link rel="stylesheet" href="stylesheets/playview.css">
<script>var gameId = <%= gameId %></script>
<canvas id="backgroundTowers"></canvas>
<section class="playView">
	<section id="left">
		<section id="search">
			<h3>Search For Company:</h3>
			<div class="ui-widget">
				<div class="ui-front">
					<input id="companySearch" type="text" placeholder="Find Company">
					<div class="ui-helper-hidden-accessible"></div>
				</div>
			</div>
		</section>
		<hr>
		<section id="companyCard">
			<section id="info"><!-- rivets.bind($("#info"),blah)-->
				<div id="name"><h2 rv-text='companyCard.name'>Apple</h2></div>
				<div id="code"><h3 rv-text='companyCard.code'>AAPL</h3></div>
				<hr>
				<div id="amount">
					<ul>
						<li rv-text="companyCard.stockprice">Stock Price: 90</li>
						<li rv-text="companyCard.stockavailable">Stock Availiable: 1000</li>
					</ul>
				</div>
				<hr>
			</section>
			<div id="orderStock">
				<div class="slider" id="amountShares"></div>
				<button id="placeOrder">Place Order</button>
				<div id="stats"></div>
			</div>
		</section>
	</section>
	<section id="companyGraphic">
		<h1>Enterpriser</h1>
		<h2>Company - $Valuation (Stocks + Balance)</h2>
	</section>


<section id="right">
	<section class="yourCard">
		<div id="info">
			<h2 id="companyName" rv-text="yourCard.companyName"></h3>
			<h3 id="companyId" rv-text="yourCard.companyId"></h3>
			<hr>
			<p>Your Balance ($): </p><h4 rv-text="yourCard.balance"></h4>
			<p>Shares: </p><h4 rv-text="yourCard.shares"></h4>
			<p>Share Price ($): </p><h4 rv-text="yourCard.sharePrice"></h4>
			<hr>
			<div id="portfolio">
				<h3>Your Portfolio</h3>
        <ul id="portlist">
        </ul>
		<hr>
				<ul class="portfolio">
					<li rv-text="portdata.name"></li>
					<li rv-text="portdata.id"></li>
					<li rv-text="portdata.shares"></li>
					<li rv-text="portdata.price"></li>
					<li rv-text="portdata.balVal"></li>
					<hr>
					<h3>Sell your stocks in this company</h3>
					<div id="sellSlider"></div>
					<button id="sellButton">Sell</button>
				</ul>
			</div>
		</div>
	</section>
	<hr>
	<div id="valueGraph"></div>
	<div id="stats">Stats</div>
</section>
</section>
</section>
